{
  "manifest_version": 3,
  "name": "QuickReply",
  "version": "1.1.1",
  "description": "Generate smart email replies using OpenRouter AI.",
  "permissions": ["storage", "clipboardWrite"],
  "host_permissions": [
    "https://openrouter.ai/api/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}